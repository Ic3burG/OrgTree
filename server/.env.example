# Database
DATABASE_URL="file:/opt/render/project/src/data/production.db"

# Authentication
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="CHANGE_TO_SECURE_128_CHAR_HEX_STRING"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="production"

# Frontend URL (for CORS in split deployments)
# For single-server deployment, this can be the same as your app URL
FRONTEND_URL="https://your-app.onrender.com"

# Optional: Database backup location
BACKUP_DIR="./backups"

# Email (Resend) - Required for invitation emails
# Get your API key at https://resend.com
RESEND_API_KEY="re_xxxxx"
# The "from" email address (use onboarding@resend.dev for testing)
FROM_EMAIL="OrgTree <onboarding@resend.dev>"
# Your app's public URL (used in invitation email links)
APP_URL="https://your-app.onrender.com"
