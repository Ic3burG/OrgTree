{
  "name": "orgtree-server",
  "version": "1.0.0",
  "type": "module",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "dev": "tsx watch --import ./src/instrument.ts src/index.ts",
    "start": "NODE_ENV=production tsx --import ./src/instrument.ts src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "backup": "tsx scripts/backup.ts",
    "backup:list": "tsx scripts/backup.ts --list",
    "backup:stats": "tsx scripts/backup.ts --stats",
    "lint": "eslint src/ scripts/",
    "lint:fix": "eslint src/ scripts/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/node": "^10.32.1",
    "@simplewebauthn/server": "^13.2.2",
    "bcrypt": "^5.1.0",
    "better-sqlite3": "^12.5.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "otplib": "^13.0.0",
    "qrcode": "^1.5.4",
    "resend": "^6.6.0",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.21.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
