#!/bin/sh

echo "Running pre-commit checks..."

# Force ARM64 architecture (fixes x86 git spawning x86 node)
if [ "$(arch)" = "i386" ]; then
  exec arch -arm64 "$0" "$@"
fi

# Run frontend tests
echo "Running frontend tests..."
npm test

if [ $? -ne 0 ]; then
  echo "Frontend tests failed. Commit aborted."
  exit 1
fi

echo "Pre-commit checks passed!"
